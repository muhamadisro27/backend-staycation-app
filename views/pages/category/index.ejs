<script>
  $("#dataTable").on("click", ".btn-update", (e) => {
    e.preventDefault();
    const id = e.target.getAttribute("data-id");
    const name = e.target.getAttribute("data-name");

    $("#editModal").modal("show");
    $("#id").val(id);
    $("#name").val(name);
  });
</script>
