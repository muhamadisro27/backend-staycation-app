<!-- Modal -->
<div
  class="modal fade"
  id="addModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Item</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/item" method="post">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Name <span class="text-danger">*</span></label>
            <input
              autofocus
              type="text"
              class="form-control"
              name="name"
              placeholder="Enter name category"
              required
            />
          </div>
          <div class="form-group">
            <label for="price">Price <span class="text-danger">*</span></label>
            <input
              autofocus
              type="text"
              class="form-control"
              name="price"
              placeholder="Enter price"
              required
            />
          </div>
          <div class="form-group">
            <label for="price">Country <span class="text-danger">*</span></label>
            <input
              autofocus
              type="text"
              class="form-control"
              name="country"
              placeholder="Enter country"
              required
            />
          </div>
          <div class="form-group">
            <label for="price">City <span class="text-danger">*</span></label>
            <input
              autofocus
              type="text"
              class="form-control"
              name="city"
              placeholder="Enter city"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
